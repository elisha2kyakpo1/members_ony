<h1>Posts</h1>
<table>
  <thead>
    <tr>
      <th>Post</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <% if user.logged_in? %>
            <td><%= post.user.name %></td>
        <% else %>
            <td>Anonymous</td>
        <% end %>        
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "New Post", new_post_path %>